<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>



    <meta charset="utf-8">
    <meta name="author" content="pixelhint.com">
    <meta name="description" content="Sublime Stunning free HTML5/CSS3 website template" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/reset.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox-thumbs.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox-buttons.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/animate.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/main.css">

    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/jquery.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-buttons.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-media.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-thumbs.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/wow.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/main.js"></script>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
        }
    </style>

</head>
<body>
    <section class="billboard light">
        <header class="wrapper dark">

            <a href="~/Home/Index"><img class="logo" src="@Url.Content("~/Content/mytemplate/")img/logo.jpg" alt="" style="width:139px;height:44px;" /></a>
            <nav>
                <ul>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("AD"))
                    {
                        <li>@Html.ActionLink("Admin Menu", "Admin", "Menu")</li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("AR"))
                    {
                        <li>@Html.ActionLink("Artist Menu", "Artist", "Menu")</li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("CO"))
                    {
                        <li>@Html.ActionLink("Collector Menu", "Collector", "Menu")</li>
                    }

                    <li>@Html.ActionLink("About Us", "About", "Home")</li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    else
                    {
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    }
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>
            </nav>
        </header>

        <div class="caption dark animated wow fadeInDown clearfix">
            <h1> XYZ COMPANY PVTLTD </h1>
            <h2>@ViewBag.message</h2>
            <p><b>@ViewBag.para </b></p>
            <hr>
        </div>

    </section>
    <div>
        @RenderBody()

    </div>
    <footer>
        <div class="wrapper">
            <div class="rights">
                <a href="~/Home/Index">
                    <img src="@Url.Content("~/Content/mytemplate/")img/logo.jpg" alt="" class="footer_logo" style="height:44px" />
                </a>
                <p>© ArtGallery. All Rights Reserved 2017 - <a href="http://artgalleryonline.com" target="_blank">artgalleryonline.com</a></p>
            </div>

            <nav>
                <ul>
                    <li><a href="~/Home/About">About</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="https://www.facebook.com"> Fb </a></li>
                    <li><a href="https://www.twitter.com"> twitter </a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="~/Home/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
